<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vivek.interestcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            android:screenOrientation="portrait"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //SimpleInterestCalculatorActivity
        <activity
            android:name=".SimpleInterestCalculatorActivity"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity" />
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />

        //CompoundInterestCalculatorActivity
        <activity
            android:name=".CompoundIntrestCalcualtorActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />

        //EMICalculatorActivity
        <activity
            android:name=".EMICalcualtorActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />

        //About
        <activity android:name=".About"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />

        //ContctUs
        <activity android:name=".ContactUs"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" >
        <!-- The meta-data tag is required if you support API level 15 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />
    </activity>

    </application>

</manifest>